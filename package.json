{
  "name": "uswds",
  "version": "0.9.0",
  "description": "Open source UI components and visual style guide for U.S. government websites",
  "main": "package.json",
  "scripts": {
    "postinstall": "npm run build-sass",
    "build-sass": "node-sass assets/_scss/all.scss > assets/css/uswds.css",
